<Window x:Class="LitDisto.Vk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LitDisto"
        mc:Ignorable="d"
        Title="Vk" Height="450" Width="500">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                <GradientStop Color="DarkBlue" Offset="0.0"/>
                <GradientStop Color="Aqua" Offset="1.1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64" Foreground="white">
            VKontakte
        </TextBlock>

        <Border Grid.Row="1" Width="200" Height="50" Background="White" CornerRadius="25">
            <Button Click="Button_Click" BorderThickness="0" Background="white" Width="190" Height="25">Coming Soon, Maybe</Button>
        </Border>


    </Grid>
</Window>
